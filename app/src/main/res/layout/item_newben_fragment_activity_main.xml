<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:padding="5dp">

    <ImageView
        android:id="@+id/iv_photo_item_newben_fragment_activity_main"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"

        />

    <TextView
        android:id="@+id/tv_title_item_newben_fragment_activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/iv_photo_item_newben_fragment_activity_main"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="标题"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tv_date_item_newben_fragment_activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_photo_item_newben_fragment_activity_main"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="时长"
        android:textSize="12sp"/>


</RelativeLayout>